@using AntDesign
@page "/"

<Row Gutter="16">
    <Col Span="12">
        <ButtonGroup>
            <Button Icon="@IconType.Outline.Wechat" OnClick="args => RenderOut(RenderPlatform.Wechat)">WeChat</Button>
            <Button Icon="@IconType.Outline.Robot" OnClick="args => RenderOut(RenderPlatform.Cnblogs)">Cnblogs</Button>
            <Button Icon="@IconType.Fill.ZhihuCircle" OnClick="args => RenderOut(RenderPlatform.Zhihu)">Zhihu</Button>
            <Button Icon="@IconType.Outline.Qq" OnClick="args => RenderOut(RenderPlatform.TencentCloud)">TencentCloud</Button>
            <Button Icon="@IconType.Outline.Fire" OnClick="args => RenderOut(RenderPlatform.Toutiao)">Toutiao</Button>
            <Button Icon="@IconType.Outline.Info" OnClick="args => RenderOut(RenderPlatform.InfoQ)">InfoQ</Button>
        </ButtonGroup>
        <TextArea @bind-Value="MarkdownSource" OnChange="MarkdownSourceChanged" />
    </Col>
    <Col Span="12">
        <Card Bordered="false">
            <Body>
            <ButtonGroup>
                <Button Icon="@IconType.Outline.Wechat" OnClick="args => RenderPreview(RenderPlatform.Wechat)">WeChat</Button>
                <Button Icon="@IconType.Outline.Robot" OnClick="args => RenderPreview(RenderPlatform.Cnblogs)">Cnblogs</Button>
                <Button Icon="@IconType.Fill.ZhihuCircle" OnClick="args => RenderPreview(RenderPlatform.Zhihu)">Zhihu</Button>
                <Button Icon="@IconType.Outline.Qq" OnClick="args => RenderPreview(RenderPlatform.TencentCloud)">TencentCloud</Button>
                <Button Icon="@IconType.Outline.Fire" OnClick="args => RenderPreview(RenderPlatform.Toutiao)">Toutiao</Button>
                <Button Icon="@IconType.Outline.Info" OnClick="args => RenderPreview(RenderPlatform.InfoQ)">InfoQ</Button>
            </ButtonGroup>
            <div id="demoOut">
                @((MarkupString)HtmlOut)
            </div>
            <div id="copyOut" style="display: none">
                @((MarkupString)CopyOut)
            </div>
            </Body>
        </Card>
    </Col>
</Row>

@code{
    public string MarkdownSource { get; set; } = "please input markdown text";
    public string HtmlOut { get; set; } = "<div>waiting results</div>";
    public string CopyOut { get; set; } = "<div>waiting results</div>";
    private RenderPlatform _lastPlatform = RenderPlatform.Wechat;

    [Inject]
    public IMdRender MdRender { get; set; }

    [Inject]
    public IJSRuntime JsRuntime { get; set; }

    private async Task MarkdownSourceChanged(string value)
    {
        await RenderPreview(_lastPlatform);
    }

    private async Task RenderPreview(RenderPlatform platform)
    {
        _lastPlatform = platform;
        if (!string.IsNullOrWhiteSpace(MarkdownSource))
        {
            var result = await MdRender.Render(platform, MarkdownSource);
            HtmlOut = result;
            _ = Task.Run(async () =>
            {
                await Task.Delay(100);
                await JsRuntime.InvokeVoidAsync("mdRender", platform.ToString());
            });
        }
    }

    private async Task RenderOut(RenderPlatform platform)
    {
        if (!string.IsNullOrWhiteSpace(MarkdownSource))
        {
            var result = await MdRender.Render(platform, MarkdownSource);
            CopyOut = result;
            _ = Task.Run(async () =>
            {
                await Task.Delay(100);
                await JsRuntime.InvokeVoidAsync("mdRender", platform.ToString());
                await JsRuntime.InvokeVoidAsync("copyOut");
            });
        }
    }

}